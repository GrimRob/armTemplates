{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceBusNamespaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Service Bus namespace"
      }
    },
    "queueNames": {
      "type": "array",
      "metadata": {
        "description": "Array of queueNames"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "sku": {
      "type": "string",
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ],
      "metadata": {
        "description": "The messaging tier for service Bus namespace"
      }
    },
    "deadLetteringOnMessageExpiration": {
      "type": "bool",
      "defaultValue": false,
      "allowedValues": [
        true,
        false
      ]
    },
    "requiresDuplicateDetection": {
      "type": "bool",
      "defaultValue": false,  // needs at least Standard tier
      "allowedValues": [
        true,
        false
      ]
    },
    "duplicateDetectionHistoryTimeWindow": {
      "type": "string",
      "defaultValue": "PT10M" // 10 minutes
    }
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "2022-01-01-preview",
      "name": "[parameters('serviceBusNamespaceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[parameters('sku')]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/queues",
      "apiVersion": "2022-01-01-preview",
      "name": "[concat(parameters('serviceBusNamespaceName'), '/', parameters('queueNames')[copyIndex()])]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', parameters('serviceBusNamespaceName'))]"
      ],
      "copy": {
        "name": "queueLoop",
        "count": "[length(parameters('queueNames'))]"
      },
      "properties": {
        "defaultMessageTimeToLive": "P2D",   // 2 days
        "requiresDuplicateDetection": "[parameters('requiresDuplicateDetection')]",
        "duplicateDetectionHistoryTimeWindow": "[parameters('duplicateDetectionHistoryTimeWindow')]",
        "deadLetteringOnMessageExpiration": "[parameters('deadLetteringOnMessageExpiration')]"
      }
    }
  ],
  "outputs": {
    "createdQueues": {
      "type": "array",
      "value": "[parameters('queueNames')]"
    }
  }
}
