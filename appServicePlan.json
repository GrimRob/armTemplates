{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "servicePlanName": {
      "type": "string",
      "defaultValue": "FishyDev",
      "metadata": {
        "description": "The App Service Plan name"
      },
      "minLength": 2
    },
    "sku": {
      "type": "string",
      "defaultValue": "S1",
      "metadata": {
        "description": "The SKU of App Service Plan, by default is Standard S1"
      }
    },
    "skuTier": {
      "type": "string",
      "defaultValue": "Standard",
      "metadata": {
        "description": "SKU tier of the app service plan. Defaults to Standard."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "perSiteScaling": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "perSiteScaling setting - true or false"
      }
    },
    "reserved": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "true for Linux, false for Windows"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "kind": "[if(parameters('reserved'), 'linux', 'app')]",
      "name": "[parameters('servicePlanName')]",
      "location": "[parameters('location')]",
      "properties": {
        "name": "[parameters('servicePlanName')]",
        "perSiteScaling": "[parameters('perSiteScaling')]",
        "reserved": "[parameters('reserved')]"
      },
      "dependsOn": [],
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[parameters('skuTier')]"
      }
    }
  ]
}
